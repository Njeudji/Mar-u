            android:id="@+id/checkbox_filter_room_7"
            android:textSize="18dp"
            android:text="Room KHRUMA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"/>

        <CheckBox
            android:id="@+id/checkbox_filter_room_8"
            android:textSize="18dp"
            android:text="Room ISIS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"/>

        <CheckBox
            android:id="@+id/checkbox_filter_room_9"
            android:textSize="18dp"
            android:text="Room ICARE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"/>

        <CheckBox
            android:id="@+id/checkbox_filter_room_10"
