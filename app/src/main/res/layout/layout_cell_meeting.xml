<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/meeting_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/button_available_meeting"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="20dp"
            android:foregroundGravity="center_vertical"
            android:src="@drawable/ic_baseline_lens_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/info_Meeting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:layout_constraintBottom_toTopOf="@id/info_Participant"
            app:layout_constraintEnd_toStartOf="@id/icon_delete_item"
            app:layout_constraintStart_toEndOf="@id/button_available_meeting"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="NotSibling"
            tools:text="AMAZON" />

        <TextView
            android:id="@+id/info_Participant"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/icon_delete_item"
            app:layout_constraintStart_toEndOf="@id/button_available_meeting"
            app:layout_constraintTop_toBottomOf="@id/info_Meeting"
            tools:ignore="NotSibling"
            tools:text="AMAZONE" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Trash icon -->
<ImageView
android:id="@+id/icon_delete_item"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_gravity="center_vertical|end"
    android:padding="16dp"
android:src="@drawable/ic_baseline_delete_24"
android:contentDescription="TODO" />


</androidx.cardview.widget.CardView>